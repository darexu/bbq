<div class="col-md-8 buffer-both">
  <div class="card">
    <div class="card-header">Вход</div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-md-4 col-form-label text-md-right" %><br />
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-md-4 col-form-label text-md-right" %><br />
          <div class="col-md-6">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row">
            <div class="col-md-6 offset-md-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="actions col-md-6 offset-md-4">
          <%= f.submit "Войти", class: "btn btn-primary btn-sm" %>
          или <%= render "devise/shared/links" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
