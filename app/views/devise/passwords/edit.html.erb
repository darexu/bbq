<div class="row">
  <div class="col-md-8 mt-4 mb-4">
    <div class="card">
      <div class="card-header"><%= t('app.text.change_password') %></div>
      <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group row">
          <%= f.label :password, class: "col-md-4 col-form-label text-md-right"%><br />
          <div class="col-md-6">
           <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-md-4 col-form-label text-md-right" %><br />
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
          </div>
        </div>

        <div class="actions col-md-6 offset-md-4">
           <%= f.submit t('app.buttons.change_password'), class: "btn btn-primary btn-sm" %>
            или <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
